@startuml
skinparam shadowing false
skinparam BackgroundColor #FFFFFF
skinparam defaultFontName Montserrat
skinparam rectangle {
  BorderColor #D9DEE3
  RoundCorner 12
}

' Color constants from your CSS
!define GREEN #2ddf5c
!define DARK  #0e4f1f
!define PINK  #ff1b68
!define CARD  #d5ffdc
!define HILIT #19b84c
!define FOOT  #000000
!define HERO  #EAF7EF  ' fallback tint; actual hero uses freedom.jpg

package "index.html layout" {
  rectangle "Header\n.main-header\n(shared.css)" as HEADER #GREEN
  rectangle "Hero\n#product-overview\n(main.css, bg: freedom.jpg)" as HEROSEC #HERO
  rectangle "Plans\n#plans\n(main.css)" as PLANS
  rectangle "Plan\n.article.plan (FREE/PREMIUM)\n(main.css)" as PLAN #CARD
  rectangle "Plan (Highlighted)\n.article.plan.plan--highlighted (PLUS)\n(main.css)" as PLANH #HILIT
  rectangle "Key Features\n#key-features\n(main.css)" as KEY #PINK
  rectangle "Footer\n.main-footer\n(shared.css)" as FOOTER #FOOT
}

' Reading flow top → bottom
HEADER -down-> HEROSEC
HEROSEC -down-> PLANS
PLANS -down-> KEY
KEY -down-> FOOTER

' Group plan variants under Plans
PLANS -[hidden]-> PLAN
PLANS -[hidden]-> PLANH

note right of HEADER
  Nav & Brand styles come from shared.css:
  - .main-header__brand (dark green text)
  - .main-nav, .main-nav__item, .main-nav__item--cta
  - .button (reused in plans)
end note

note right of HEROSEC
  main.css:
  - background image (freedom.jpg)
  - fixed height & padding
  - #product-overview h1 uses Anton, white
end note

legend right
  Styling sources:
  • shared.css → header, nav, footer, buttons
  • main.css → hero, plans, key-features
  Key colors:
  • Header: #2ddf5c
  • CTA & Features band: #ff1b68
  • Plan card: #d5ffdc
  • Highlighted plan: #19b84c
  • Footer: #000000
endlegend
@enduml
